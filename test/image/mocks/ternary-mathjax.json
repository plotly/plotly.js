{
 "data": [
  {
   "type": "scatterternary",
   "mode": "markers",
   "a": [75],
   "b": [25],
   "c": [0],
   "text": ["point 1"],
   "marker": {
    "symbol": 100,
    "color": "#DB7365",
    "size": 14,
    "line": {
     "width": 2
    }
   }
  }
 ],
 "layout": {
  "ternary": {
   "sum": 100,
   "aaxis": {
    "title": {
     "text": "$A^2$"
    },
    "showline": true,
    "showgrid": true
   },
   "baxis": {
    "title": {
     "text": "$B^2$"
    },
    "tickprefix": "$\\sqrt",
    "ticksuffix": "^2$",
    "showline": true,
    "showgrid": true
   },
   "caxis": {
    "title": {
     "text": "$C^2$"
    },
    "showline": true,
    "showgrid": true,
    "labelalias": {
     "20": "$(\\sqrt20)^2$",
     "60": "<i><b>Sixty<b><i>"
    }
   }
  },
  "width": 600,
  "height": 600,
  "title": {
   "text": "Simple Ternary Plot with Markers",
   "subtitle": {
    "text": "$y = ax^2 + bx + c$"
   }
  }
 }
}
